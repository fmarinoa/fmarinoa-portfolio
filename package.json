{
  "name": "fmarinoa-portfolio",
  "version": "0.1.0",
  "author": {
    "name": "Franco Mariño",
    "url": "https://github.com/fmarinoa/"
  },
  "description": "Portfolio website of Franco Mariño, a software developer specializing in web development and open-source contributions.",
  "repository": {
    "type": "git",
    "url": "https://github.com/fmarinoa/fmarinoa-portfolio/"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "prepare": "husky || true",
    "test": "playwright test",
    "postinstall": "pnpm exec playwright install chromium"
  },
  "dependencies": {
    "@playwright/test": "1.55.0",
    "@tsconfig/node22": "22.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "dotenv": "17.2.3",
    "eslint": "9.34.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "neostandard": "0.12.2",
    "prettier": "3.6.2",
    "typescript-eslint": "8.41.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,astro}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
