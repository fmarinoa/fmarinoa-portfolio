---
import Footer from '@/components/Footer.astro'
import BackToTop from '@/components/BackToTop.astro'
import Navbar from '@/components/Navbar.astro'

import '@fontsource/bebas-neue'
import bebasNeueWoff2 from '@fontsource/bebas-neue/files/bebas-neue-latin-400-normal.woff2?url'

import '@/styles/global.css'

interface Props {
  title?: string
  description?: string
  ogImage?: string
}

const {
  title = 'Franco Mariño | Portfolio',
  description = 'Portfolio profesional de Franco Mariño, Senior Test Automation Engineer especializado en QA, automatización de pruebas y tecnologías modernas de testing.',
} = Astro.props

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Franco Mariño',
  jobTitle: 'Senior Test Automation Engineer',
  description:
    'Portfolio profesional de Franco Mariño, Senior Test Automation Engineer especializado en QA, automatización de pruebas y tecnologías modernas de testing.',
  url: 'https://portfolio.francomarino.dev',
  sameAs: ['https://linkedin.com/in/fmarinoa', 'https://github.com/fmarinoa'],
}
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Franco Mariño" />
    <meta name="language" content="es" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />

    <!-- Metadatos SEO básicos -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="QA, testing, test automation, Selenium, Cypress, Playwright, Jest, CI/CD, DevOps testing, ingeniería, ingeniero de sistemas, senior, freelance, portfolio, Franco Mariño"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:locale" content="es_ES" />
    <meta
      property="og:image"
      content="https://portfolio.francomarino.dev/og-image.jpg"
    />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta
      property="og:image:alt"
      content="Franco Mariño - Senior Test Automation Engineer Portfolio"
    />
    <meta property="og:site_name" content="Franco Mariño | Portfolio" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://portfolio.francomarino.dev" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta name="twitter:creator" content="@francoedson_" />
    <meta name="twitter:site" content="@francoedson_" />
    <meta
      property="twitter:image"
      content="https://portfolio.francomarino.dev/og-image.jpg"
    />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://portfolio.francomarino.dev" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

    <!-- Preload de fuentes -->
    <link
      rel="preload"
      href={bebasNeueWoff2}
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://portfolio.francomarino.dev" />

    <!-- Agregar metadatos estructurados para SEO -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify(structuredData)}
    />

    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body>
    <Navbar />
    <main class="pt-20 max-w-4xl mx-auto px-4 space-y-6">
      <slot />
      <BackToTop />
    </main>
    <Footer />
  </body>
</html>
