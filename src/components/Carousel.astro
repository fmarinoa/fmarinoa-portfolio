import type { ImageMetadata } from 'astro'

type TIcon = { src: ImageMetadata; alt: string }

interface Props {
  readonly icons: TIcon[]
}

const { icons } = Astro.props as Props
---

<div class="relative overflow-hidden w-full" role="list">
  <div class="edge-fade-left" aria-hidden="true"></div>
  <div class="edge-fade-right" aria-hidden="true"></div>

  <div class="flex gap-6 w-max marquee py-1">
    {
      icons.map((tool, i) => (
        <div
          role="listitem"
          tabindex="0"
          aria-label={tool.alt}
          class="tool-card flex-shrink-0 w-16 h-16 bg-card border border-gray-700 rounded-xl flex items-center justify-center p-3 transition-all duration-300"
        >
          <img
            src={tool.src.src}
            alt={tool.alt}
            loading="lazy"
            class="tool-image w-full h-full object-contain transition-all duration-300"
          />
        </div>
      ))
    }
  </div>
</div>

<style>
  /* Estilos hover para la tarjeta de herramienta */
  .tool-card:hover {
    border-color: rgb(60, 131, 246); /* primary/indigo-400 */
    box-shadow:
      0 10px 25px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05); /* shadow-lg */
    transform: scale(1.1); /* scale-110 */
  }

  /* Estilos hover para la imagen */
  .tool-card:hover .tool-image {
    filter: brightness(1.1); /* brightness-110 */
  }
</style>
