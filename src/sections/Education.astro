---
import InfoCard from '@/components/InfoCard.astro'
import Link from '@/components/Link.astro'
import Section from '@/components/Section.astro'
import { careers } from '@/data/careers'
import { courses } from '@/data/courses'
import type { Career, Course } from '@/types'
---

<Section sectionId="education" title="EducaciÃ³n">
  <div class="grid md:grid-cols-2 gap-6 mb-6">
    {
      careers.map((career: Career) => (
        <InfoCard
          title={career.title}
          logo={career.logo.src}
          logoAlt={career.institutionLong}
          entity={career.institutionShort}
          location={career.location}
          period={career.period}
          details={career.details}
        />
      ))
    }
  </div>

  <h3 class="text-lg font-bold mt-6 mb-2">Algunas certificaciones:</h3>
  <ul class="pl-2">
    {
      courses.map((course: Course) => (
        <li class="mb-2">
          <span class="font-medium">
            <Link
              className="underline underline-offset-4 cursor-pointer"
              href={course.url}
            >
              {course.name}
            </Link>
          </span>
          <br />
          <span class="text-gray-300">{course.institution}</span>{' '}
          <span class="text-gray-400">({course.year})</span>
        </li>
      ))
    }
  </ul>
</Section>
